# Function to check antivirus status
function Check-AntivirusStatus {
    # Use Get-CimInstance to query the Security Center for antivirus products
    $antivirusProducts = Get-CimInstance -Namespace "root/SecurityCenter2" -ClassName "AntiVirusProduct" -ErrorAction SilentlyContinue

    if ($antivirusProducts) {
        Write-Output "Antivirus product(s) found:"
        foreach ($product in $antivirusProducts) {
            $productName = $product.displayName
            $productEnabled = $product.productState -band 1

            Write-Output "Product Name: $productName"
            if ($productEnabled) {
                Write-Output "Status: Enabled"
            } else {
                Write-Output "Status: Disabled"
            }
        }
    } else {
        Write-Output "No antivirus product found."
    }
}

# Run the function to check the antivirus status
Check-AntivirusStatus
